<center><h1><a href="http://gallery.chuteki.com">chuteki | gallery</a></h1></center>

<center><%= will_paginate @arts %></center>

<div id="gallery" class="container">
  <% i=0 %>
  <% total_works = @arts.count %>
  <% if total_works < 1 %>
    There are no works to display!
  <% end %>
  <% for work in @arts %>
    <% if i%3==0 %>
      <div class="row">
    <% end %>
    <div class="col-md-4">
      <div class="thumbnail center-block" style="width:275px;height:auto;overflow:hidden;border:transparent;">
        <a href="#" data-toggle="modal" data-target="#myModal<%=i%>"><img src="<%= work.image.medium.url %>"></a>
        <center><%= work.name %></center>
      </div>
    </div>

    <div class="modal fade" id="myModal<%=i%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel<%=i%>">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel<%=i%>"><%= work.name %></h4>
          </div>
          <div class="modal-body">
            <center><img src="<%=work.image.large.url%>" style="max-width:100%;height:auto;"></center>
          </div>
          <div class="modal-body">
            <center><%= work.description %></center>
          </div>
          <div class="modal-footer">

             <div style="float:left;color:#737373;">
               <% work.tag_list.each do |tag| %>
                <a class="btn btn-default btn-xs" href="/?tag=<%= tag %>"><%= tag %></a>
                <% end %>
             </div>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

    <% i+=1 %>
    <% if i%3==0 || i == total_works %>
      </div>
    <% end %>
  <% end %>
</div>

<center><%= will_paginate @arts %></center>

<script type="application/javascript">
    $(window).on('popstate', function() {
        $('.modal').modal('hide');
        $( ".modal-backdrop" ).remove();
        $( ".in" ).remove();
    });
</script>
