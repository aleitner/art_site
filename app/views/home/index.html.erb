<h1>Chuteki Art</h1>
<div id="gallery" class="container">
  <% i=0 %>
  <% total_works = @arts.count %>
  <% for work in @arts %>
    <% if i%3==0 %>
      <div class="row">
    <% end %> 
    <div class="col-md-4">
      <div class="thumbnail center-block" style="width:275px;height:300px">
        <a href="<%= work.image.url %>"><img src="<%= work.image.medium.url %>"></a>
        <center><%= work.name %></center>
      </div>
    </div>
    <% i+=1 %> 
    <% if i%3==0 || i == total_works%>
      </div>
    <% end %>
  <% end %>
</div>

