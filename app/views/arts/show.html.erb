<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @art.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @art.description %>
</p>

<p>
  <strong>Image:</strong>
   <% if @art.image? %>
      <%= image_tag @art.image.thumb.url %><br />
      <%= image_tag @art.image.small.url %><br />
      <%= image_tag @art.image.medium.url %><br />
      <%= image_tag @art.image.large.url %>
   <% end %> 
</p>

