<%= form_for @art, html: { multipart: true } do |f| %>
  <% if @art.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@art.errors.count, "error") %> prohibited this art from being saved:</h2>

      <ul>
      <% @art.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :name, placeholder: "name", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_area :description, placeholder: "description", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :tag_list %><br>
    <%= f.text_field :tag_list, value: @art.tag_list.join(', '), class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image %><br />
    <%= f.file_field :image, class: "form-control" %>
    <% if f.object.image? %>
      <br />
      <%= image_tag f.object.image.medium.url %>
      <br />
      <%= f.label :remove_image %>
      <%= f.check_box :remove_image %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :hidden %>
    <%= f.check_box :hidden %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-success btn-lg btn-block" %>
  </div>
<% end %>
