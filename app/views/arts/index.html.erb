<p id="notice"><%= notice %></p>

<h1>Listing Arts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Position</th>
      <th>Name</th>
      <th>Description</th>
      <th>Tags</th>
      <th>Image</th>
      <th>Hidden</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @arts.each do |art| %>
      <tr>
        <td>
          <center>
            <%= link_to 'Δ', arts_move_to_top_path(:id => art.id) %><br />
            <%= link_to '▲', arts_move_higher_path(:id => art.id) %><br />
            <%= art.position %><br />
            <%= link_to '▼', arts_move_lower_path(:id => art.id) %><br />
            <%= link_to '∇', arts_move_to_bottom_path(:id => art.id) %>
          </center>
        </td>
        <td><%= art.name %></td>
        <td><%= art.description %></td>
        <td><%= art.tag_list %></td>
        <td>
          <% if art.image? %>
            <%= image_tag art.image.small.url %>
          <% end %>
        </td>
        <td><%= art.hidden %></td>
        <td><%= link_to 'Edit', edit_art_path(art) %></td>
        <td><%= link_to 'Destroy', art, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
